import { GroupBox, HorizontalBox, GridBox, TabWidget, VerticalBox, Button, TextEdit, StandardButton, ProgressIndicator, Spinner, CheckBox, Palette, ScrollView } from "std-widgets.slint";

export component DebInstaller inherits Window {
    title: @tr("Package Installation Wizard");
    width: 500px;
    height: 320px;
    icon: @image-url("/usr/share/pixmaps/io.aosc.deb_installer.svg");

    in-out property <string> package;
    in-out property <string> description;
    in-out property <string> version;
    in-out property <string> installed-size;
    in-out property <string> metadata;
    in-out property <float> progress;
    in-out property <string> message;
    in-out property <bool> can-install;
    private property <bool> is-install;
    in-out property <bool> finished;
    in-out property <int> action;
    in-out property <int> err-num;
    in-out property <string> err;
    in-out property <string> status: err-num == 0 ? @tr("OK to install") : err-num == 6 ? @tr("Dependencies unmet") : err;
    private property <string> install-button-name: root.action == 0 ? @tr("Install") : root.action == 1 ? @tr("Reinstall") : root.action == 2 ? @tr("Upgrade") : root.action == 3 ? @tr("Downgrade") : @tr("Install");

    callback install();
    callback close();

    if (!is-install): VerticalLayout {
        GridBox {
            Row {
                VerticalBox {
                    padding-bottom: 25px;
                    padding-top: -5px;
                    padding-left: 15px;

                    HorizontalBox {
                        vertical-stretch: 0;
                        padding-left: 0px;
                        Text {
                            vertical-alignment: top;
                            horizontal-alignment: left;
                            font-size: 24px;
                            font-weight: 600;
                            text: root.package;
                            overflow: elide;
                            width: 90%;
                        }
                    }

                    HorizontalBox {
                        vertical-stretch: 0;
                        padding-top: -13px;
                        padding-left: 0px;
                        Text {
                            vertical-alignment: top;
                            horizontal-alignment: left;
                            color: root.err-num == 0 ? Palette.control-foreground : #aa0000;
                            text:  root.version + " · " + root.installed-size + " · " + root.status;
                            overflow: elide;
                            width: 90%;
                        }
                    }

                    HorizontalBox {
                        vertical-stretch: 0;
                        padding-top: -13px;
                        padding-left: 0px;
                        Text {
                            vertical-alignment: top;
                            horizontal-alignment: left;
                            text: root.description;
                            overflow: elide;
                            width: 90%;
                        }
                    }
                }

                VerticalBox {
                    padding-top: -40px;
                    padding-left: -50px;
                    Image {
                        // FIXME: Slint does not yet render SVG in scaled interfaces properly.
                        // Use a high-definition PNG for now.
                        source: @image-url("/usr/share/pixmaps/io.aosc.deb_installer.png");
                        width: 128px;
                        height: 128px;
                    }
                }
            }
        }

        Rectangle {
            height: 1px;
            background: #cfcfcf;
        }

        Rectangle {
            background: Palette.control-background;
            vertical-stretch: 1;
            HorizontalBox {
                padding-top: 15px;
                padding-left: 20px;
                padding-right: 30px;
                Text {
                    vertical-alignment: top;
                    horizontal-alignment: left;
                    text: @tr("Welcome to the software package installation wizard. Please note that many 3rd-party software packages are not tested nor verified by your distribution maintainers (they may not function as expected, or may contain malicious content).\n\nTo install the package, press \"{}\" below and you will be prompted for administrative password.", root.install-button-name);
                    wrap: word-wrap;
                }
            }
        }

        Rectangle {
            height: 1px;
            background: #cfcfcf;
        }

        HorizontalBox {
            vertical-stretch: 0;
            Button {
                text: root.install-button-name;
                clicked => {
                    root.is-install = true;
                    root.install();
                }
                enabled: root.can-install;
            }

            Button {
                text: @tr("Cancel");
                clicked => {
                    root.close();
                }
            }
        }
    }

    if (root.is-install): VerticalLayout {
        Rectangle {
            Rectangle {
                width: 96%;
                height: 93%;
                // FIXME: Terminal widget, or auto-scrolling TextInput at some point?
                TextEdit {
                    width: 100%;
                    height: 100%;
                    has-focus: false;
                    placeholder-text: @tr("Preparing for installation, please wait ...");
                    text: root.message;
                    read-only: true;
                    wrap: word-wrap;
                }
            }
        }

        Rectangle {
            height: 1px;
            background: #cfcfcf;
        }

        if (!root.finished): HorizontalBox {
            progress-indicator := ProgressIndicator {
                height: 34px;
                min-width: 160px;
                progress: root.progress;
            }
        }

        if (root.finished): HorizontalBox {
            Button {
                height: 34px;
                text: @tr("Finish");
                clicked => {
                    root.close();
                }
            }
        }
    }
}
